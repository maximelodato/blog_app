<!-- app/views/comments/show.html.erb -->

<h1>Commentaire de <%= @comment.user.email %></h1>

<p><%= @comment.content %></p>

<p>Publié le <%= @comment.created_at.strftime("%d/%m/%Y à %H:%M") %></p>

<%= link_to 'Éditer', edit_article_comment_path(@article, @comment), class: "btn btn-primary" %>
<%= link_to 'Retour à l\'article', article_path(@article), class: "btn btn-secondary" %>
