<!DOCTYPE html>
<html>
<head>
  <title>BlogApp</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", media: "all" %>
  <%= javascript_importmap_tags %>
</head>

<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <%= link_to 'BlogApp', root_path, class: 'navbar-brand' %>
  <div class="collapse navbar-collapse">
    <ul class="navbar-nav ml-auto">
      <% if user_signed_in? %>
        <li class="nav-item">
          <span class="nav-link">Connecté en tant que <%= current_user.email %></span>
        </li>
        <li class="nav-item">
          <%= link_to 'Déconnexion', destroy_user_session_path, method: :delete, class: 'nav-link' %>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to 'Inscription', new_user_registration_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Connexion', new_user_session_path, class: 'nav-link' %>
        </li>
      <% end %>
    </ul>
  </div>
</nav>

<div class="container mt-4">
  <% flash.each do |key, message| %>
    <div class="alert <%= bootstrap_class_for_flash(key) %>">
      <%= message %>
    </div>
  <% end %>

  <%= yield %>
</div>
</body>
</html>
