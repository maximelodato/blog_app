<p style="color: green"><%= notice %></p>

<%= link_to "New article", new_article_path %>
<%= button_tag "Compter les articles", id: "count-articles-button", class: "btn btn-primary" %>
<div id="articles-count" class="mt-2"></div>

<h1>Articles</h1>

<div id="articles">
  <% @articles.each do |article| %>
    <%= render article %>
    <p>
      <%= link_to "Show this article", article %>
    </p>
  <% end %>
</div>


